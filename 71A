#include<bits/stdc++.h>
using namespace std;

void solve()
{
    string str;
    cin >> str;
    int l = str.length();
    if(l > 10)
    {
        cout <<str[0] << l - 2 << str[l - 1] << "\n";
    }else{
        cout << str << "\n";
    }
}

int main()
{
    int t;
    cin >> t;
    while(t--)
    {
        solve();
    } 
    return 0;
}
